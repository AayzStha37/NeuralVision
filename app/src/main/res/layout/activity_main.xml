<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mybg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_bg_anim"
    tools:context="com.example.aayzstha.neuralvision.MainActivity"
    tools:layout_editor_absoluteY="25dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp">

        <Button
            android:id="@+id/bt_option"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="36dp"
            android:background="@drawable/actionbar" />

        <Button
            android:id="@+id/bt_analytics"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:background="@drawable/icon_analytics" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/box"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/rect1"
        app:layout_constraintBottom_toTopOf="@+id/swipe_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
      >

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignBottom="@+id/obj_count"
            android:layout_alignLeft="@+id/txt_msg1"
            android:layout_alignStart="@+id/txt_msg1"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_main_logo" />

        <TextView
            android:id="@+id/obj_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/nexab"
            android:textColor="#fff"
            android:textSize="72dp" />

        <TextView
            android:id="@+id/txt_msg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:fontFamily="@font/nexab"
            android:text="Objects detected today!"
            android:textColor="#fff"
            android:textSize="22dp" />

    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


</RelativeLayout>

    <com.ebanx.swipebtn.SwipeButton
        android:id="@+id/swipe_btn"
        android:layout_width="258dp"
        android:layout_height="61dp"
        android:layout_below="@+id/box"
        android:layout_marginTop="36dp"
        android:layout_alignStart="@+id/box"
        android:layout_marginLeft="50dp"
        app:button_background="@drawable/lock_circ"
        app:button_bottom_padding="16dp"
        app:button_image_disabled="@drawable/disconnect"
        app:button_image_enabled="@drawable/connect"
        app:button_left_padding="16dp"
        app:button_right_padding="16dp"
        app:button_top_padding="16dp"
        app:inner_text="     Dis-Connected"
        app:inner_text_background="@drawable/lock_slide"
        app:inner_text_bottom_padding="18dp"
        app:inner_text_color="#fff"
        app:inner_text_left_padding="20dp"
        app:inner_text_size="18dp"
        app:inner_text_top_padding="15dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/rr2">

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:background="@drawable/shutter_circ">

            <Button
                android:id="@+id/btn_shutter"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_centerInParent="true"
                android:background="@drawable/shutter" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="28dp"
            android:background="@drawable/shutter_circ">

            <Button
                android:id="@+id/btn_gal"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:background="@drawable/gallery" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>

